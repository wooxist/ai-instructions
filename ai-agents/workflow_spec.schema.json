{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "required": ["name", "description", "version", "steps"],
  "properties": {
    "name": { "type": "string" },
    "description": { "type": "string" },
    "version": { "type": "string" },
    "trigger": { "type": "object" },
    "variables": {
      "type": "array",
      "items": { "type": "object" }
    },
    "steps": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["name"],
        "properties": {
          "name": { "type": "string" },
          "type": { "type": "string" },
          "agent": { "type": "string" },
          "inputs": { "type": "array" },
          "outputs": { "type": "array" },
          "retry": {
            "type": "object",
            "properties": {
              "max_attempts": { "type": "integer" },
              "on_failure": { "type": "string" }
            }
          },
          "condition": { "type": "string" }
        }
      }
    },
    "on_failure": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "type": { "type": "string" },
          "message": { "type": "string" },
          "level": { "type": "string" }
        }
      }
    }
  }
}