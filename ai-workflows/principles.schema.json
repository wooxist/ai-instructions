{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "required": ["project_type", "critical_principles", "recommended_principles"],
  "properties": {
    "project_type": { "type": "string", "enum": ["single_agent", "multi_agent", "organizational"] },
    "complexity_level": { "type": "string", "enum": ["simple", "moderate", "complex"] },
    "critical_principles": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["principle", "category", "rationale", "application", "risk_if_ignored"],
        "properties": {
          "principle": { "type": "string" },
          "category": { "type": "string" },
          "rationale": { "type": "string" },
          "application": { "type": "string" },
          "risk_if_ignored": { "type": "string" }
        }
      }
    },
    "recommended_principles": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["principle", "category", "rationale", "application", "benefit"],
        "properties": {
          "principle": { "type": "string" },
          "category": { "type": "string" },
          "rationale": { "type": "string" },
          "application": { "type": "string" },
          "benefit": { "type": "string" }
        }
      }
    },
    "optional_principles": { "type": "array", "items": { "type": "string" } },
    "design_guidelines": { "type": "array", "items": { "type": "string" } }
  }
}